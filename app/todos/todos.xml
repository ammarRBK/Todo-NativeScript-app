<Page loaded="gitInfo">
	<GridLayout rows="auto, *" columns="2*, *">
		<TextField id="newTask" text="{{ taskField }}" hint="Enter a new task" row="0" col="0" />
		<Button text="Add" tap="addNewTask" row="0" col="1" />
		<Label id="exactTask" text="{{ errorMessage }}" horizontalAlignment="left" verticalAlignment="center"/>
		<ListView items="{{ tasks }}" id="tasks" row="1" colSpan="2">
			<ListView.itemTemplate>
				<Label id="exactTask" text="{{ task }}" horizontalAlignment="left" verticalAlignment="center"/>
				<Button text="X" tap="deleteTask"/>
			</ListView.itemTemplate>
		</ListView>
		<ActivityIndicator busy="{{ busy }}" rowSpan="2" colSpan="2" />
	</GridLayout>
</Page>